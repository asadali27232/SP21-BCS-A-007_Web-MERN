<header class="px-5">
    <a href="/">
        <img id="logo" src="images/logoX.png" alt="Logo" />
    </a>
    <nav>
        <% if (req.session.user) { %> <% if (req.session.user.role ===
        'cashier') { %>
        <!-- Display links for cashier -->
        <a href="/home">Home</a>
        <a href="/orders">Orders</a>
        <% } else if (req.session.user.role === 'manager') { %>
        <!-- Display links for manager -->
        <a href="/home">Home</a>
        <a href="/orders">Orders</a>
        <a href="/products">Products</a>
        <a href="/dashboard">Dashboard</a>
        <a href="/register">Register</a>
        <!-- Add more links for manager as needed -->
        <% } %>

        <!-- Common links for all logged-in users -->
        <a href="#" onclick="logout()">Logout</a>
        <% } else { %>
        <!-- If user is not logged in, show only login link -->
        <a href="/login">Login</a>
        <% } %>
    </nav>
</header>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    function logout() {
        $.ajax({
            url: '/logout',
            type: 'POST',
            success: function (data) {
                window.location.href = '/login';
            },
            error: function (error) {
                alert(error.responseJSON.error); // Handle the error
            },
        });
        return false; // Prevent the default link behavior
    }
</script>
